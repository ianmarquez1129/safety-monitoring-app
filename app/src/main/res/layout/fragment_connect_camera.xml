<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fragment_bg"
    tools:context=".home.camera.ConnectCameraFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connect_to_the_device"
                android:gravity="center"
                android:textColor="@color/warm_black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go to your phone's Wi-Fi settings and connect to the device's network. Then return to this app."
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can find the network that your device broadcasts."
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/undraw_signal_searching"/>
            <com.kusu.loadingbutton.LoadingButton
                android:id="@+id/openWifi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:text="Open WiFi Settings"
                android:textColor="@color/white"
                style="@android:style/Widget.Button"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@drawable/button_background"
                app:lb_buttonColor="@color/green"
                app:lb_isShadowEnable="true"
                app:lb_isCircular="true"
                app:lb_loaderColor="@color/white"
                app:lb_shadowColor="@color/warm_black"
                app:lb_shadowHeight="5dp" />
            <com.kusu.loadingbutton.LoadingButton
                android:id="@+id/buttonConnected"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:text="I'm Already Connected"
                android:textColor="@color/white"
                style="@android:style/Widget.Button"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@drawable/button_background"
                app:lb_buttonColor="@color/green"
                app:lb_isShadowEnable="true"
                app:lb_isCircular="true"
                app:lb_loaderColor="@color/white"
                app:lb_shadowColor="@color/warm_black"
                app:lb_shadowHeight="5dp" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>